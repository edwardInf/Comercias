<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_usuarioMiCuenta"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/txt_iniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/iniciarSesion2"
        android:layout_weight="1"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_datosMiCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/txt_nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="asdasd"
            android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/txt_emailUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasd"
            android:textSize="14sp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_perfilMiCuenta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_width="0.5dp"
        android:layout_weight="0"
        app:civ_border_color="@color/blanco"
        android:src="@drawable/sin_usuario"/>


</LinearLayout>