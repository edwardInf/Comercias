<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="6dp">
    <LinearLayout
        android:id="@+id/layout_recientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--  <com.joooonho.SelectableRoundedImageView
              android:id="@+id/img_productos"
              android:src="@drawable/categorias"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:scaleType="fitXY"
              app:sriv_left_top_corner_radius="6dip"
              app:sriv_right_top_corner_radius="6dip"
              app:sriv_left_bottom_corner_radius="0dip"
              app:sriv_right_bottom_corner_radius="0dip"
              app:sriv_border_color="#008fea"
              app:sriv_oval="false"
              android:adjustViewBounds="true"/>
      -->
        <ImageView
            android:id="@+id/img_productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@string/tendencias"
            android:src="@drawable/rounded_imageview"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/txt_nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/gris3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <!--<TextView
            android:id="@+id/txt_marcaProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>-->
        <TextView
            android:id="@+id/txt_precioOfertaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/negro2"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_precioProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
